{
  "manifest_version": 3,
  "name": "AppliTrack",
  "version": "2.0",
  "description": "Track your job applications automatically across LinkedIn, Indeed, Internshala, and Glassdoor. Modern UI with analytics, kanban board, and smart reminders.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "content_security_policy": {
    "script-src": ["'self'", "https://cdn.jsdelivr.net"]
  },
  "action": {
    "default_title": "AppliTrack - Track Job Applications",
    "default_popup": "popup/index.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.linkedin.com/*"],
      "js": ["scripts/TrackerUtils.js", "scripts/linkedin.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://*.indeed.com/*", "*://*.indeed.co.in/*"],
      "js": ["scripts/TrackerUtils.js", "scripts/indeed.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://internshala.com/*"],
      "js": ["scripts/TrackerUtils.js", "scripts/internshala.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://*.glassdoor.com/*", "*://*.glassdoor.co.in/*"],
      "js": ["scripts/TrackerUtils.js", "scripts/glassdoor.js"],
      "run_at": "document_idle"
    }
  ]
}