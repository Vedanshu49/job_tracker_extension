---
import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="AppliTrack - The automated job application tracker for professionals. Privacy-focused, Kanban-style organization for LinkedIn, Indeed, and more." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | AppliTrack</title>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
	</head>
	<body class="bg-dark text-white font-sans min-h-screen flex flex-col antialiased selection:bg-primary/30 selection:text-white">
		
        <nav class="fixed w-full top-0 z-50 backdrop-blur-lg bg-dark/80 border-b border-white/5 transition-all duration-300">
			<div class="max-w-7xl mx-auto px-6 h-20 flex items-center justify-between">
                <a href="/" class="flex items-center gap-3 group">
					<div class="relative">
                        <div class="absolute inset-0 bg-primary/50 blur-lg rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                        <img src="/logo.png" alt="AppliTrack Logo" class="w-8 h-8 object-contain relative z-10" />
                    </div>
					<span class="text-xl font-bold tracking-tight text-white group-hover:text-primary transition-colors">
						AppliTrack
					</span>
				</a>

                <div class="hidden md:flex gap-8 text-sm font-medium text-gray-400">
					<a href="/guide" class="hover:text-white transition-colors">How it Works</a>
					<a href="/about" class="hover:text-white transition-colors">Features</a>
                    <a href="/developer" class="hover:text-white transition-colors">Developer</a>
				</div>

                <a href="/download" class="hidden md:flex items-center gap-2 px-5 py-2.5 bg-white/5 hover:bg-white/10 border border-white/10 rounded-full text-sm font-semibold text-white transition-all hover:border-primary/50 hover:shadow-[0_0_20px_rgba(99,102,241,0.2)]">
					<span>Get Extension</span>
                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" /></svg>
				</a>
			</div>
		</nav>

		<div class="flex-1 mt-20">
			<slot />
		</div>

        <footer class="border-t border-white/5 py-16 bg-dark">
			<div class="max-w-7xl mx-auto px-6 grid grid-cols-1 md:grid-cols-4 gap-12">
				<div class="space-y-4">
                    <div class="flex items-center gap-2">
                        <img src="/logo.png" alt="AppliTrack" class="w-6 h-6 grayscale opacity-70" />
                        <span class="font-bold text-gray-300">AppliTrack</span>
                    </div>
					<p class="text-sm text-gray-500 leading-relaxed">
						The open-source automated tracker that turns your browser into a career command center.
					</p>
				</div>
                
                <div>
                    <h4 class="font-bold text-white mb-4">Product</h4>
                    <ul class="space-y-2 text-sm text-gray-500">
                        <li><a href="/download" class="hover:text-primary transition-colors">Download</a></li>
                        <li><a href="/guide" class="hover:text-primary transition-colors">User Guide</a></li>
                        <li><a href="/about" class="hover:text-primary transition-colors">Release Notes</a></li>
                    </ul>
                </div>

                <div>
                    <h4 class="font-bold text-white mb-4">Community</h4>
                    <ul class="space-y-2 text-sm text-gray-500">
                        <li><a href="https://github.com/vedanshu49/job_tracker_extension" class="hover:text-primary transition-colors">GitHub Repository</a></li>
                        <li><a href="https://docs.google.com/forms/d/e/1FAIpQLSdBrzGegbr6UjH39AQCqDcJj6uw0mHuxhMzsdO_iFP2mjPdeA/viewform" class="hover:text-primary transition-colors">Submit Suggestion</a></li>
                        <li><a href="https://docs.google.com/forms/d/e/1FAIpQLSfgifo2NG6QlCERRV_uASoPBktiM6owgLJdsQ9A1xbUOh8n6A/viewform" class="hover:text-primary transition-colors">Report a Bug</a></li>
                    </ul>
                </div>

                <div>
                    <h4 class="font-bold text-white mb-4">Legal</h4>
                    <ul class="space-y-2 text-sm text-gray-500">
                        <li><a href="/privacy" class="hover:text-primary transition-colors">Privacy Policy</a></li>
                        <li><a href="/developer" class="hover:text-primary transition-colors">Developer Contact</a></li>
                    </ul>
                </div>
			</div>
            <div class="max-w-7xl mx-auto px-6 mt-12 pt-8 border-t border-white/5 text-center text-sm text-gray-600">
                &copy; {new Date().getFullYear()} Vedanshu Pandey. Open Source (MIT License).
            </div>
		</footer>
	</body>
</html>